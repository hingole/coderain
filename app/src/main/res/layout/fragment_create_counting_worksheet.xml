<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="in.shingole.maker.fragment.CreateCountingWorksheetFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New counting worksheet. Pick from the following options to create a new worksheet for counting objects"
            android:id="@+id/counting_worksheet_description_label"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Counting upto"/>

        <RadioGroup
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/counting_worksheet_levels"
            android:layout_gravity="left|top">
            <RadioButton
                android:layout_width="wrap_content"
                android:paddingRight="40dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/counting_worksheet_level1"
                android:layout_gravity="left|top"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40dp"
                android:text="10"
                android:id="@+id/counting_worksheet_level2"
                android:layout_gravity="left|top"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:paddingRight="40dp"
                android:layout_height="wrap_content"
                android:text="15"
                android:id="@+id/counting_worksheet_level3"
                android:layout_gravity="left|top"/>
        </RadioGroup>
    <!--
        <TextView
            android:paddingTop="20dp"
            android:text="Pick your characters or objects."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_width="match_parent"
            android:id="@+id/pick_character_grid_container"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp">
        </GridLayout>
      -->
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/create_counting_worksheet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Worksheet"/>
        </LinearLayout>
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->


</FrameLayout>
